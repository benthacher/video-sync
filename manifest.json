{
    "manifest_version": 2,
    "name": "Video Sync",
    "version": "1.0",
  
    "description": "Syncs up videos on a page",
  
    "icons": {
        "48": "icons/video-sync-48.png"
    },
  
    "content_scripts": [
        {
            "matches": [
                "*://*.youtube.com/watch*",
                "*://*.hulu.com/watch/*",
                "*://*.max.com/video/watch/*"
            ],
            "js": ["video-sync-client.js"]
        }
    ],

    "background": {
        "scripts": ["background.js"]
    },
    
    "page_action": {
        "show_matches": [
            "*://*.youtube.com/watch*",
            "*://*.hulu.com/watch/*",
            "*://*.max.com/video/watch/*"
        ],
        "default_icon": {
            "19": "icons/video-sync-19.png",
            "38": "icons/video-sync-38.png"
        },
        "default_title": "Video Sync"
    }      
}
  